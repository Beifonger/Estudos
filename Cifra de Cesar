let palavra = "Mangaz";
let resposta = criarCifra(palavra);

console.log(resposta)

function criarCifra(x) {
   
    let arrayDaPalavra = x.toUpperCase().split("");
    const alfabeto = [];
    
    for (let i = 97; i <= 122; i++) {
        alfabeto.push(String.fromCharCode(i).toUpperCase());
    }
    console.log(alfabeto)

    let letrasAprovadas = "";

    for (let i = 0; i < x.length; i++) {
        let letra = arrayDaPalavra[i];
        for (let a = 0; a < 26; a++) {
            if (letra === alfabeto[a]) {
                let novaLetra = alfabeto[(a + 3) % 26];
                letrasAprovadas += novaLetra;
                break;
            }
        }
    }
    return letrasAprovadas;
}
